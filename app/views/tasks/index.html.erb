<h1>All my tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <%= link_to "Edit this task", task_path(task) %>
    <%=link_to "Delete this task", task_path(task), method: :delete %>
  </li>
  <% end %>
</ul>

<h2><%= link_to "Create new task", new_task_path %></h2>
